/** 
 * Multiplexor:
 * out = a if sel == 0
 *       b otherwise
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
	Not(in = sel, out=Notsel);
	
    Nand(a=a, b= Notsel, out= aNandNotsel);
	Nand(a=sel, b=b, out= selNandb);
	
	Nand(a= aNandNotsel, b= selNandb, out=out);
	
}